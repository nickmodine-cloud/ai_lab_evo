{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://k2tech.ai/schemas/hypothesis.json",
  "title": "Hypothesis",
  "type": "object",
  "required": [
    "hyp_id",
    "lab_id",
    "title",
    "stage",
    "priority",
    "owners",
    "impact_score",
    "feasibility_score",
    "confidence_score"
  ],
  "properties": {
    "hyp_id": {
      "type": "string",
      "pattern": "^HYP-[0-9]{3,}$"
    },
    "lab_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 160
    },
    "statement": {
      "type": "string",
      "minLength": 10
    },
    "description": {
      "type": "string",
      "maxLength": 5000
    },
    "ai_type": {
      "type": "string",
      "enum": ["LLM", "CLASSICAL_ML", "CV", "NLP", "RPA", "ANALYTICS", "OTHER"]
    },
    "ai_subtype": {
      "type": "string",
      "description": "Subtype such as Chatbot, RAG, Forecasting, etc."
    },
    "business_category": {
      "type": "string",
      "description": "Portfolio or line-of-business category."
    },
    "owners": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/actor"
      }
    },
    "sponsors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/actor"
      }
    },
    "observers": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/actor"
      }
    },
    "priority": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
    },
    "stage": {
      "$ref": "#/$defs/stage"
    },
    "stage_health": {
      "type": "string",
      "enum": ["on-track", "warning", "risk"],
      "default": "on-track"
    },
    "stage_history": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/stage_event"
      }
    },
    "impact_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "multipleOf": 0.1
    },
    "feasibility_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "multipleOf": 0.1
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "multipleOf": 0.01
    },
    "complexity_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "multipleOf": 0.1
    },
    "risk_class": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"],
      "default": "MEDIUM"
    },
    "data_requirements": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "volume": {
          "type": "string",
          "description": "Expected volume such as rows or GB."
        },
        "quality": {
          "type": "string",
          "enum": ["UNKNOWN", "LOW", "MEDIUM", "HIGH"]
        },
        "refresh_cadence": {
          "type": "string",
          "description": "How often data is refreshed."
        },
        "governance_notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "roi_estimate": {
      "type": "object",
      "required": ["currency", "expected_roi", "payback_period_weeks"],
      "properties": {
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "one_time_cost": {
          "type": "number",
          "minimum": 0
        },
        "ongoing_cost_per_period": {
          "type": "number",
          "minimum": 0
        },
        "expected_roi": {
          "type": "number"
        },
        "payback_period_weeks": {
          "type": "integer",
          "minimum": 0
        },
        "value_driver": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "time_estimate": {
      "type": "object",
      "properties": {
        "discovery_weeks": {
          "type": "integer",
          "minimum": 0
        },
        "experiment_weeks": {
          "type": "integer",
          "minimum": 0
        },
        "production_weeks": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "success_metrics": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/success_metric"
      }
    },
    "gating_checklist": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/checklist_item"
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "linked_experiments": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/linked_experiment"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/link"
      }
    },
    "attachments": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/attachment"
      }
    },
    "governance_state": {
      "type": "string",
      "enum": ["NOT_REQUIRED", "PENDING", "APPROVED", "REJECTED"]
    },
    "notes": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "archived_at": {
      "type": "string",
      "format": "date-time",
      "nullable": true
    },
    "activity_digest": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/activity_event"
      }
    }
  },
  "$defs": {
    "actor": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "role": {
          "type": "string",
          "enum": ["OWNER", "TECH_LEAD", "REVIEWER", "OBSERVER", "SPONSOR", "STAKEHOLDER"],
          "default": "OWNER"
        },
        "department": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "stage": {
      "type": "string",
      "enum": [
        "IDEATION",
        "SCOPING",
        "PRIORITIZATION",
        "EXPERIMENTATION",
        "EVALUATION",
        "SCALING",
        "PRODUCTION",
        "ARCHIVED"
      ]
    },
    "stage_event": {
      "type": "object",
      "required": ["stage", "changed_at", "changed_by"],
      "properties": {
        "stage": {
          "$ref": "#/$defs/stage"
        },
        "changed_at": {
          "type": "string",
          "format": "date-time"
        },
        "changed_by": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "success_metric": {
      "type": "object",
      "required": ["label", "target"],
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "target": {
          "type": "number"
        },
        "direction": {
          "type": "string",
          "enum": ["INCREASE", "DECREASE", "MAINTAIN"],
          "default": "INCREASE"
        },
        "unit": {
          "type": "string"
        },
        "current_value": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "checklist_item": {
      "type": "object",
      "required": ["label", "status"],
      "properties": {
        "label": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in-progress", "complete"]
        },
        "owner": {
          "type": "string"
        },
        "due_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "linked_experiment": {
      "type": "object",
      "required": ["id", "title", "status"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "link": {
      "type": "object",
      "required": ["label", "url"],
      "properties": {
        "label": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["SPEC", "DOC", "DATASET", "EXPERIMENT", "OTHER"],
          "default": "OTHER"
        }
      },
      "additionalProperties": false
    },
    "attachment": {
      "type": "object",
      "required": ["id", "name", "url"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "uploaded_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "activity_event": {
      "type": "object",
      "required": ["id", "type", "occurred_at", "actor"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "CREATED",
            "UPDATED",
            "STAGE_CHANGED",
            "COMMENTED",
            "APPROVED",
            "REJECTED",
            "ATTACHMENT_ADDED"
          ]
        },
        "occurred_at": {
          "type": "string",
          "format": "date-time"
        },
        "actor": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "details": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
